@{
    ViewData["Title"] = "Index";
}

@model car_workshop_csharp.Models.TicketsOverviewViewModel

<h1>Tickets</h1>

<p>
    <a asp-action="Create">Create New Ticket</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Registration ID</th>
            <th>Problem Description</th>
            <th>Status</th>
            <th>Parts</th>
            <th>Time Slots</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.Tickets)
        {
            <tr>
                <td>@ticket.Brand</td>
                <td>@ticket.Model</td>
                <td>@ticket.RegistrationId</td>
                <td>@ticket.ProblemDescription</td>
                <td>@ticket.Status</td>
                <td>
                    @if (ticket.Parts != null && ticket.Parts.Count > 0)
                    {
                        <ul>
                            @foreach (var part in ticket.Parts)
                            {
                                <li>@part.Name - @part.Amount x @part.UnitPrice = @part.TotalPrice</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No parts added</p>
                    }
                </td>
                <td>
                    @if (ticket.TimeSlots != null && ticket.TimeSlots.Count > 0)
                    {
                        <ul>
                            @foreach (var timeSlot in ticket.TimeSlots)
                            {
                                <li>@timeSlot.StartTime - @timeSlot.EndTime</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No time slots added</p>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ticket.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@ticket.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@ticket.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
