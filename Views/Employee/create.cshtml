@{
    ViewData["Title"] = "create employee";
}

@model Workshop.Models.AddEmployeeViewModel

<h1 class="display-4">Create Employee</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Employee.Name" class="control-label">
            Name
        </label>
        <input asp-for="Employee.Name" class="form-control" />
        <span asp-validation-for="Employee.Name" class="text-danger"></span>
    </div>
    <div class="form-group
">
        <label asp-for="Employee.HourlyRate" class="control-label">
            Hourly Rate
        </label>
        <input asp-for="Employee.HourlyRate" class="form-control" />
        <span asp-validation-for="Employee.HourlyRate" class="text-danger">
            Should be a number
        </span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

