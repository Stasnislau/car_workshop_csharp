@{
    ViewData["Title"] = "Create";
}
@model car_workshop_csharp.Models.AddEmployeeViewModel;


<h1 class="display-4">Create Employee</h1>

<form method="post" asp-action="Create" asp-controller="Employee" class="form" role="form">
    <div class="form-group">
        <label class="control-label">Name</label>
        <input asp-for="Name" class="form-control" type="text" placeholder="Name" name="Name" />
        <span asp-validation-for="Name" class="text-danger"></span> 
    </div>
    <div class="form-group">
        <label class="control-label">Hourly Rate</label>
        <input asp-for="HourlyRate" name="HourlyRate" class="form-control" type="number" step="0.5" min="0" placeholder="0.00" />
        <span asp-validation-for="HourlyRate" asp-for="HourlyRate" class="text-danger"></span>
    </div>
    <div class="form-group pt-4">
        <button type="submit" name="button" class="btn btn-primary">Create</button>
    </div>
</form>