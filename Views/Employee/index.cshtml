@{
    ViewData["Title"] = "Employee Page";
}

@model List<Employee>

<h1 class="display-4 text-center">Employee Page</h1>



<select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeList">
    <option value="">Select Employee</option>

    @foreach (var employee in Model)
    {
        <option value="@employee.Id">@employee.Name</option>
    }

</select>

<div class="flex-row justify-content-between d-flex pt-4">
    <button class="btn btn-primary" onclick="
        window.location.href = '@Url.Action("Create", "Employee")';
    ">Create Employee</button>
    <button class="btn btn-primary" onclick="
        window.location.href = '@Url.Action("Edit", "Employee")/' + $('#EmployeeId').val();
    ">Edit Employee</button>
    <button class="btn btn-primary" onclick="
        window.location.href = '@Url.Action("Delete", "Employee")/' + $('#EmployeeId').val();
    ">Delete Employee</button>
</div>