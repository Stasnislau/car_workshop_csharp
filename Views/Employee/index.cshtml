@{
    ViewData["Title"] = "Employee List";
}

<h1>Employee List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Hourly Rate</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.HourlyRate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
