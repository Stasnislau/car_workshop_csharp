@{
    ViewData["Title"] = "Home Page";
}

<style>
    .custom-btn {
        transition: transform 0.3s ease-in-out;
        position: relative;
        overflow: hidden;
        border: none;
        padding: 0;
        cursor: pointer;
    }

    .custom-btn:focus {
        outline: none;
    }

    .custom-btn::after {
        content: attr(data-hover-text);
        position: absolute;
        top: 0px;
        left: 50%;
        transform: translateX(-50%);
        background: rgba(0, 0, 0, 0.5);
        color: white;
        padding: 5px;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
    }

    .custom-btn:hover {
        transform: scale(1.05);
    }

    .custom-btn:hover::after {
        opacity: 1;
    }
</style>

